<a href="/messages/new">Post a message... It's FREE (for now)!</a>

<h1>Message List here<h1>

<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%=message.id %>"><%= message.id %> </a><small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
  </div>
<% end %>
